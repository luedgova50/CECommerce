@model IEnumerable<CECommerce.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<div>
    <div class="col-mod-8">
        <h2>List of Categories</h2>
        <img src="~/Images/Forms/categorias.jpg" height="150" width="250" />
    </div>
</div>
<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary btn-lg" })
</p>
<table class="table table-striped table-bordered table-hover table-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CategoryId }, new { @class = "btn btn-warning btn-lg" })
            @Html.ActionLink("Details", "Details", new { id=item.CategoryId }, new { @class = "btn btn-info btn-lg" })
            @Html.ActionLink("Delete", "Delete", new { id=item.CategoryId }, new { @class = "btn btn-danger btn-lg" })
        </td>
    </tr>
}

</table>
